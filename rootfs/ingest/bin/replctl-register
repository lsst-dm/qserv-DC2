"""
Register database and table inside replication service

@author  Fabrice Jammes, IN2P3
"""

# -------------------------------
#  Imports of standard modules --
# -------------------------------
import argparse
import getpass
import json
import logging
import os
import sys

# ----------------------------
# Imports for other modules --
# ----------------------------
import qserv.ingest as ingest
import qserv.metadata as metadata
import requests
import urllib

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="Initialize database and table inside Qserv replication service")

    parser.add_argument("url", type=str, help="Replication web service base URL")
    parser.add_argument("data_url", type=str, help="Input data URL")
    parser.add_argument("--verbose", "-v", action="store_true", help="Use debug logging")
    args = parser.parse_args()

    logger = logging.getLogger()
    if args.verbose:
        logger.setLevel(logging.DEBUG)
    else:
        logger.setLevel(logging.INFO)
    logger.addHandler(logging.StreamHandler())

    logger.debug("Loading metadata")
    metadata = metadata.Metadata(args.data_url)

    path = "/ingest/database/%s".format(metadata.db)
    json = metadata.json_db
    url = urllib.parse.urljoin(args.url, path)
    logger.debug("Starting a request: %s with %s", url, json)
    ingest.post(url, json)

    path = "/ingest/table/%s".format(metadata.json_director["table"])
    json = metadata.json_director
    url = urllib.parse.urljoin(args.url, path)
    logger.debug("Starting a request: %s with %s", url, json)
    ingest.post(url, json)