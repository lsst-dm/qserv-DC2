"""
Load ingest queue with list of chunks to load

@author  Fabrice Jammes, IN2P3
"""

# -------------------------------
#  Imports of standard modules --
# -------------------------------
import argparse
import logging
import yaml

# ----------------------------
# Imports for other modules --
# ----------------------------
from qserv.metadata import ChunkMetadata
from qserv.queue import QueueManager
import qserv.util as util

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="Load Qserv ingest database with input chunk files (i.e. contributions)")

    parser.add_argument('--config', help="Configuration file for ingest client", type=argparse.FileType('r'),
                        default="/config/ingest.yaml", action=util.IngestConfigAction)
    parser.add_argument("--verbose", "-v", action="store_true", help="Use debug logging")

    args = parser.parse_args()

    logger = util.get_default_logger(args.verbose)
    chunk_meta = ChunkMetadata(args.config.path, args.config.servers)
    queue_manager = QueueManager(args.config.queue_url, chunk_meta)
    queue_manager.load()
