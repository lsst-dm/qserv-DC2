"""
Loop on ingest task while ingest queue is not empty:
- start a super-transaction
- get location for a chunk
- launch chunk ingest
- stop super-transaction

@author  Fabrice Jammes, IN2P3
"""

# -------------------------------
#  Imports of standard modules --
# -------------------------------
import argparse
import getpass
import json
import logging
import os
import sys

# ----------------------------
# Imports for other modules --
# ----------------------------
import qserv.ingest as ingest
import requests
from qserv.queue import QueueManager

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="A thin python wrapper around Qserv REST web service")

    parser.add_argument("url", type=str, help="Replication controller root URL")
    parser.add_argument("--verbose", "-v", action="store_true", help="Use debug logging")
    parser.add_argument("connection", type=str, metavar="CONNECTION",
                       help="Connection string in format mysql://user:pass@host:port/database.")

    args = parser.parse_args()

    logger = logging.getLogger()
    if args.verbose:
        logger.setLevel(logging.DEBUG)
    else:
        logger.setLevel(logging.INFO)
    logger.addHandler(logging.StreamHandler())

    chunk_to_load = True
    while chunk_to_load:
        chunk_to_load = ingest.ingest_task(args.url, args.connection)