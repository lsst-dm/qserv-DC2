"""
User-friendly client for Qserv replication service.

Launch an ingest task:
- start a super-transaction
- get location for a chunk
- launch chunk ingest
- stop super-transaction

@author  Fabrice Jammes, IN2P3
"""

# -------------------------------
#  Imports of standard modules --
# -------------------------------
import argparse
import getpass
import json
import logging
import os
import sys

# ----------------------------
# Imports for other modules --
# ----------------------------
import qserv.ingest as ingest
import requests

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="A thin python wrapper around Qserv REST web service")

    parser.add_argument("url", type=str, help="Web Service root URL")
    parser.add_argument("database", type=str, help="Target database")
    parser.add_argument("chunk", type=int, help="Chunk to load")
    parser.add_argument("chunk_path", type=str, help="Path to chunk file")
    parser.add_argument("--verbose", "-v", action="store_true", help="Use debug logging")
    args = parser.parse_args()

    logger = logging.getLogger()
    if args.verbose:
        logger.setLevel(logging.DEBUG)
    else:
        logger.setLevel(logging.INFO)
    logger.addHandler(logging.StreamHandler())

    payload = args.data or args.json or dict()
    ingest.ingest_task(args.url, args.database, args.chunk, args.chunk_path)
